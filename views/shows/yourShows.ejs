<% if (user.shows.length != false) { %>
<h4 class="heading">Your Shows</h4>

<div class="container"> 
<% user.shows.forEach(function(show) { %>
  <div class="row">
    <div class="col s5">
      <img src = "<%= show.image %>">
    </div>
    <div class="col s7">
      <h5><%= show.artist %></h5>
      <p>Show: <%= show.title %> </p>
      <p>Venue: <%= show.venue %></p>
      <p>Date: <%= show.date %></p>
      <a href="/shows/<%= show.id %>" class='btn delete-show'>I'm Out</a>
      <a href="../reviews/writereview/<%= show.id %>" class='btn'>Write Review</a>
      <a href="../rides/makerideshare/<%= show.id %>" class='btn'>Offer to Drive</a>
      <br>
      <br>
    </div>
  </div>
<% }); %>
<% } else { %>
<div class="row">
  <div class="col s6 offset-s3 noshows">
    <p class="flow-text">You have not yet RSVP'd to any shows! Maybe you should <a href="/search" class="solo-link">START A SEARCH</a> or check out <a href="/shows" class="solo-link">POPULAR SHOWS</a> for some inspiration...</p>
  </div>
</div>
<div class="row">
      <img src="../img/m83.jpg" class="header-img"/>
</div>
<% } %>
</div>
