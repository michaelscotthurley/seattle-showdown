<% if (user.shows.length != false) { %>
<h4>Your Shows</h4>

<div class="container">	
<% user.shows.forEach(function(show) { %>
	<div class="row">
		<div class="col s5">
			<img src = "<%= show.image %>">
		</div>
		<div class="col s7">
			<h5><%= show.artist %></h5>
			<p>Show: <%= show.title %> </p>
			<p>Venue: <%= show.venue %></p>
			<p>Date: <%= show.date %></p>
			<a href="/shows/<%= show.id %>" class='btn delete-show'>I'm Out</a>
			<a href="writereview/<%= show.id %>" class='btn'>Write Review</a>
			<a href="rides/<%= show.id %>" class='btn'>Offer to Drive</a>
			<br>
			<br>
		</div>
	</div>
<% }); %>
<% } else { %>
<div class="row">
	<div class="col s6 offset-s3 noshows">
		<h5>You have not yet RSVP'd to any shows! Maybe you should check out <a href="shows/" class="btn">POPULAR SHOWS</a> for some inspiration...</h5>
	</div>
</div>
<% } %>
</div>
