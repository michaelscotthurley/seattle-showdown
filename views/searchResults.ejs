<% if (shows.length != false) { %>
	<h2>Upcoming <%= q %> Shows:</h2>
	<% shows.forEach(function(show) { %>
		<div class="well">
			<img src = "<%= show.artists[0].thumb_url %>">
			<h3>Title: <%= show.title %> </h3>
			<p>Venue: <%= show.venue.name %></p>
			<p>Date: <%= show.formatted_datetime %></p>
			<p>Ticket Status: <%= show.ticket_status %></p>
			<a href="#" class="btn btn-warning">I'll Be There!</a>
		</div>
	<% }); %>
<% } else { %>
<h3>Sorry, there are no local <%= q %> shows anytime soon. Check back later!
<% } %>
<div class="home"><a href="/">&larr;Home</a></div>
</div>