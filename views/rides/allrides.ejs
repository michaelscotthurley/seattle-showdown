<h4 class="heading">Ride Shares</h4>

<div class="container">
  <% allrides.forEach(function(ride) { %>
    <div class="row">
      <div class="col s8 offset-s2 infoBox">
        <p class="flow-text"><a href="/rides/<%= ride.showId %>"><%= ride.show.title %></a></p>
        <p>Driver: <a href="/users/<%= ride.user.id %>"><%= ride.user.name %></a></p>
        <p>Driver's Neighborhood: <%= ride.neighborhood %></p>
        <p>Room for: <b><%= ride.passengers %></b></p>
        <p><%= ride.description %>
      </div>
    </div>
<% }); %>
</div>